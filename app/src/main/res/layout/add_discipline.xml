<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add studentName Discipline"
        android:id="@+id/labelHome"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name:"
        android:id="@+id/labelDisciplineName"
        android:layout_below="@+id/labelHome"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="185dp"
        android:layout_height="38dp"
        android:id="@+id/txtDisciplineName"
        android:layout_alignTop="@+id/labelDisciplineName"
        android:layout_toEndOf="@+id/labelDisciplineName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Grade:"
        android:id="@+id/labelDisciplineGrade"
        android:layout_below="@+id/btnAddDiscipline"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="185dp"
        android:layout_height="38dp"
        android:id="@+id/txtGrade"
        android:layout_below="@+id/txtDisciplineName"
        android:layout_toEndOf="@+id/labelDisciplineGrade" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/btnAddDiscipline"
        android:layout_marginEnd="20dp"
        android:layout_alignTop="@+id/txtDisciplineName"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/studentDisciplineList"
        android:layout_below="@+id/btnAddDiscipline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

</RelativeLayout>